<?xml version="1.0" encoding="UTF-8"?>
<project name="module_helloeffects" default="compile.module.helloeffects">
  <dirname property="module.helloeffects.basedir" file="${ant.file.module_helloeffects}"/>
  
  <property name="module.jdk.home.helloeffects" value="${jdk.home.android_4.1_platform}"/>
  <property name="module.jdk.bin.helloeffects" value="${jdk.bin.android_4.1_platform}"/>
  <property name="module.jdk.classpath.helloeffects" value="jdk.classpath.android_4.1_platform"/>
  
  <property name="compiler.args.helloeffects" value="${compiler.args}"/>
  
  <property name="helloeffects.output.dir" value="${module.helloeffects.basedir}/out/production/HelloEffects"/>
  <property name="helloeffects.testoutput.dir" value="${module.helloeffects.basedir}/out/test/HelloEffects"/>
  
  <path id="helloeffects.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="helloeffects.module.production.classpath">
    <path refid="${module.jdk.classpath.helloeffects}"/>
  </path>
  
  <path id="helloeffects.runtime.production.module.classpath">
    <pathelement location="${helloeffects.output.dir}"/>
  </path>
  
  <path id="helloeffects.module.classpath">
    <path refid="${module.jdk.classpath.helloeffects}"/>
    <pathelement location="${helloeffects.output.dir}"/>
  </path>
  
  <path id="helloeffects.runtime.module.classpath">
    <pathelement location="${helloeffects.testoutput.dir}"/>
    <pathelement location="${helloeffects.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.helloeffects">
    <patternset refid="ignored.files"/>
    <exclude name="HelloEffectsTest/**"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.helloeffects">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.helloeffects"/>
  </patternset>
  
  <path id="helloeffects.module.sourcepath">
    <dirset dir="${module.helloeffects.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  <path id="helloeffects.module.test.sourcepath">
    <dirset dir="${module.helloeffects.basedir}">
      <include name="tests"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.helloeffects" depends="compile.module.helloeffects.production,compile.module.helloeffects.tests" description="Compile module HelloEffects"/>
  
  <target name="compile.module.helloeffects.production" depends="register.custom.compilers" description="Compile module HelloEffects; production classes">
    <mkdir dir="${helloeffects.output.dir}"/>
    <javac2 destdir="${helloeffects.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.helloeffects}/javac">
      <compilerarg line="${compiler.args.helloeffects}"/>
      <bootclasspath refid="helloeffects.module.bootclasspath"/>
      <classpath refid="helloeffects.module.production.classpath"/>
      <src refid="helloeffects.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.helloeffects"/>
    </javac2>
    
    <copy todir="${helloeffects.output.dir}">
      <fileset dir="${module.helloeffects.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.helloeffects"/>
      </fileset>
      <fileset dir="${module.helloeffects.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.helloeffects"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.helloeffects.tests" depends="register.custom.compilers,compile.module.helloeffects.production" description="compile module HelloEffects; test classes" unless="skip.tests">
    <mkdir dir="${helloeffects.testoutput.dir}"/>
    <javac2 destdir="${helloeffects.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.helloeffects}/javac">
      <compilerarg line="${compiler.args.helloeffects}"/>
      <bootclasspath refid="helloeffects.module.bootclasspath"/>
      <classpath refid="helloeffects.module.classpath"/>
      <src refid="helloeffects.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.helloeffects"/>
    </javac2>
    
    <copy todir="${helloeffects.testoutput.dir}">
      <fileset dir="${module.helloeffects.basedir}/tests">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.helloeffects"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.helloeffects" description="cleanup module">
    <delete dir="${helloeffects.output.dir}"/>
    <delete dir="${helloeffects.testoutput.dir}"/>
  </target>
</project>